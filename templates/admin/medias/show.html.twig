{% extends 'base.html.twig' %}

{% block title %}Medias{% endblock %}

{% block body %}
    <h1>Medias</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ media.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ media.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ media.createdAt ? media.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{{ media.updateAt ? media.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ media.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('medias_index') }}">back to list</a>

    <a href="{{ path('medias_edit', {'id': media.id}) }}">edit</a>

    {{ include('admin/medias/_delete_form.html.twig') }}
{% endblock %}
