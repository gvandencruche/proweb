{% set message %}Are you sure you want to delete this item?{% endset %}
<form method="post" action="{{ path('prospect_delete', {'id': contact.id}) }}" onsubmit="return confirm('{{message | trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="btn">{% trans %}Delete{% endtrans %}</button>
</form>
