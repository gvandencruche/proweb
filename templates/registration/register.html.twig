{% extends 'base_contact.html.twig' %}
{% block title %}Proweb Artois : {% trans %}Register{% endtrans %}{% endblock %}
{% block navbar %}{% include('common/navbar.html.twig') %}{% endblock %}
{% block breadcrumb %}{% endblock %}
{% block googleMap %}{% endblock %}
{% block sidebar %}{% endblock %}

{% block body %}
 <article class="col-xs-12 maincontent">
    <header class="page-header">
        <h1 class="page-title">{% trans %}Register a new account{% endtrans %}</h1>
    </header>
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 class="thin text-center">{% trans %}Sign up to create a new account{% endtrans %}</h3>
                <hr>
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                {{ form_start(registrationForm) }}
                <div class="top-margin">
                    {{ form_row(registrationForm.firstname) }}
                </div>
                <div class="top-margin">
                    {{ form_row(registrationForm.lastname) }}
                </div>
                <div class="top-margin">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div class="row top-margin">
                    <div class="col-sm-6">
                        {{ form_row(registrationForm.password.first, {'attr': {'placeholder': 'Password'}}) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(registrationForm.password.second, {'attr': {'placeholder': 'Repeat Password'}}) }}
                    </div>
                </div>
                <hr>

                <div class="row">
                    <div class="col-lg-12 text-right">
                        <button class="btn btn-action" type="submit">{% trans %}Register{% endtrans %}</button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
	</div>
</article>
{% endblock %}
